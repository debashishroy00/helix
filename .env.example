# Helix Environment Configuration

# OpenAI API Key (required for semantic layer)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://helix:helix_password@localhost:5432/helix

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Browser Configuration
HEADLESS=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Metrics
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Security
SECRET_KEY=your_secret_key_here

# Platform-specific settings
SALESFORCE_TIMEOUT_MS=10000
SAP_TIMEOUT_MS=15000
WORKDAY_TIMEOUT_MS=8000

# Performance tuning
MAX_CONCURRENT_PAGES=10
CACHE_TTL_SECONDS=604800  # 7 days
STRATEGY_WEIGHTS_UPDATE_INTERVAL=3600  # 1 hour